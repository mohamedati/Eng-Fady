@model IEnumerable<ERP.Models.VacationType>

@{
    ViewData["Title"] = "متابعة أنواع الاجازات";
}


<table id="file-datatable" class="table table-striped table-bordered text-nowrap key-buttons border-bottom datatable ">
    <thead>
        <tr>
            <th>
              الاجازة
            </th>
            <th>
               رصيد الاجازة
            </th>
            <th>
               تاريخ الادخال
            </th>
           
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
          
         
                <td>

                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn btn btn-secondary   btn-wave waves-effect waves-light">تعديل</a>

                    <a href="javascript:void(0);" onclick="fillRequiredDataForDelete(@item.Id,'/VacationTypes/RemoveByAjax')" data-id="@item.Id" class="btn btn-sm btn btn btn-danger btn-wave waves-effect waves-light" title="Delete" data-bs-target="#confirmDeleteModal" data-bs-toggle="modal"> حذف</a>

                </td>
        </tr>
}
    </tbody>
</table>
