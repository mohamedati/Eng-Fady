
@model ERP.Models.VacationType

@{
    ViewData["Title"] = "انواع الأجازات";
}

<div class="row">
    <div class="col-md-12">
                    <form asp-action="Edit" id="creationForm" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatorId" />
            <input type="hidden" asp-for="CreationDate" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">اسم الاجازة</label>
                <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                            <div class="form-group">
                <label asp-for="Balance" class="control-label">رصيد الاجازة</label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
           
            <div class="col-12 pt-5">
                <input type="submit" value="حفظ" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">عرض الكل</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
